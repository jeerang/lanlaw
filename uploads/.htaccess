# Protect uploads directory - block executable files
<FilesMatch "\.(php|php5|phtml|phar|exe|sh|bat|cgi|pl)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Disable PHP execution
<IfModule mod_php.c>
    php_flag engine off
</IfModule>
